# Get by id OK
#
GET {{URL}}/employee/1 HTTP/1.1

###
#
# Create OK
#
POST {{URL}}/employee HTTP/1.1
content-type: {{contentType}}

{
    "firstName": "Windom",
    "lastName": "Earl",
    "hireDate": null,
    "phone": null,
    "address": null,
    "avatarUrl": null
}

###
#
# Create overpost FAILS
#
POST {{URL}}/employee HTTP/1.1
content-type: {{contentType}}

{
    "firstName": "Windom",
    "lastName": "Earl",
    "EXTRA": "SHOULD FAIL"
}

###
#
# Create overpost and missing required FAILS
#
POST {{URL}}/employee HTTP/1.1
content-type: {{contentType}}

{
    "firstName": "Windom",
    "lastNameMissing!": "Earl Fails"
}

